<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button"> + Add New </a>
</div>

<ul class="admin-posts">
  <% data.forEach(Posts => { %>
  <li>
    <a href="/post/<%= Posts._id %>"> <%= Posts.title %> &nearr; </a>
    <div class="admin-post-controls">
        <a href="/edit-post/<%= Posts._id %>" class="btn"> Edit Post </a>
  
        <form action="/delete-post/<%= Posts._id %>?_method=DELETE" method="post">
          <input type="submit" value="Delete" class="btn-delete btn" />
        </form>
      </div>
   
  </li>
  <% }) %>
</ul>

